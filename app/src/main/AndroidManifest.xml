<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.techflix.group36.techflix">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".Activity.WelcomeActivity"
            android:label="@string/app_name"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ProfileActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.RegistrationActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.LoginActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.EditProfileActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.MainActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activity.RateMovieActivity"
            android:label="@string/title_activity_rate_movie"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="InnerclassSeparator">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>
        <activity android:name=".Activity.RatingsListActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.UserListActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activity.AdminActivity"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>
